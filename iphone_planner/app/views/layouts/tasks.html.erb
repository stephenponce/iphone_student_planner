"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
  <title>To Do <%= @current_date%></title>
  <meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;"/>
  <meta name="apple-touch-fullscreen" content="YES" />
  
<!--
<script type="application/x-javascript" src="/javascripts/iuix.js"></script>
-->

  <%= stylesheet_link_tag 'iui.css' %>
  <%= stylesheet_link_tag 'calendar/blue/style' %>

  <body>
    <div class="toolbar">
           <%= link_to 'To Do', {:controller=>'tasks', :action=>'index'}, :class => 'toDoTab', :id=>'selected' %>

           <%= link_to 'Calendar', {:controller=>'schedules', :action=>'show_day', :day=>Time.now.day, :month=>Time.now.month, :year=>Time.now.year}, :class => 'calendarTab'  %>

     <%= link_to_remote 'Sort', {:after => "(Element.toggle('toolbar_menu'))", :url=>{:controller=>'schedules', :action=>'change_view'}}, :class => 'leftButton' %>  
       
       <%= link_to image_tag("/images/add.png"), {:action => 'new' }, :class => "button", :target => '_self', :border => 0 %> 

	 	</div>
	
		
    </div>
    <%= yield %>



</body>
</html>
